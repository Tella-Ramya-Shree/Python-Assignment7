#Average of 10 integers
num = int(input('How many numbers: '))
total_sum = 0
for n in range(num):
       numbers = float(input('Enter number : '))
       total_sum += numbers
avg = total_sum/num
print('Average of ', num, ' numbers is :', avg)

#Printing Pattern
print('\n')	 
i = 1
while i<=4:
  print("*"*i)
  i = i+1